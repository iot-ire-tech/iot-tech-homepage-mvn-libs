    <profiles>
        <profile>
            <id>iot-base-gcloud</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-antrun-plugin</artifactId>
                        <version>1.1</version>
                        <executions>
                            <execution>
                                <phase>test</phase>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                                <configuration>
                                    <tasks>
                                        <echo>Updating Comms</echo>
                                        <echo>Build Dir ${project.build.outputDirectory}</echo>
                                        <delete file="${project.build.outputDirectory}/env.comms.properties"/>
                                        <copy file="src/main/resources/env.comms.properties"
                                              tofile="${project.build.outputDirectory}/env.comms.properties"/>

                                        <echo>Updating deployment and URLs</echo>
                                        <delete file="${project.build.outputDirectory}/env.js"/>
                                        <delete file="src/main/webapp/env.js"/>
                                        <copy file="src/main/webapp/services/utils/env/env-controller-gcloud.js"
                                              tofile="${project.build.outputDirectory}/env.js"/>
                                        <copy file="src/main/webapp/services/utils/env/env-controller-gcloud.js"
                                              tofile="src/main/webapp/env.js"/>

